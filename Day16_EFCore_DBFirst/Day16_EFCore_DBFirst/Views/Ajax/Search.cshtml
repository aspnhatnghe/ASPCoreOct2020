
@{
    ViewData["Title"] = "Search";
}

<h1>Search</h1>
<input id="TuKhoa" placeholder="Tìm gì?" />

<div id="ketqua"></div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $("#TuKhoa").keyup(function () {
                $.ajax({
                    url: "/Ajax/Search",
                    type: "post",
                    data: {
                        "Keyword": $(this).val().trim()
                    },
                    success: function (dataReturn) {
                        $("#ketqua").html(dataReturn);
                    }
                });
            });
        });
    </script>
}

