
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div id="clock"></div>
@section Scripts{ 
<script>
    $(document).ready(function () {
        setInterval(function () {
            $.ajax({
                url: "/Ajax/ServerTime",
                type: "POST",
                success: function (response) {
                    $("#clock").html(response);
                },
                error: function (err, xhr, mess) {
                    console.log(err);
                }
            });
        }, 1000);
        
    });
</script>
}