@model IEnumerable<Day16_EFCore_DBFirst.ViewModels.HangHoaAjaxVM>

@foreach(var item in Model)
{
    <div class="col-4">
        <img src="~/Hinh/HangHoa/@item.Hinh" height="180" />
        <h2>@item.TenHh</h2>
        <h4 class="text-danger">@item.DonGia.ToString("#,##0") đ</h4>
        <button data-mahh="@item.MaHh" class="btn btn-primary mua-ngay">Mua ngay</button>
    </div>
}