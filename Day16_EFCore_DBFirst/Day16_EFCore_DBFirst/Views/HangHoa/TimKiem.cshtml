@model IEnumerable<Day16_EFCore_DBFirst.ViewModels.HangHoaTimKiemVM>
@{
    ViewData["Title"] = "TimKiem";
}

<h1>Tìm Kiếm</h1>
<form asp-action="TimKiem">
    Tìm theo tên: <input name="TuKhoa" />
    Giá từ: <input name="GiaTu" type="number" />
    đến: <input name="GiaDen" type="number" />
    <button>Tìm</button>
</form>
<table>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.MaHh</td>
            <td>@item.TenHh</td>
            <td>@item.TenLoai</td>
            <td>@item.DonGia.Value.ToString("#,##0") đ</td>
            <td>@item.NgaySx.ToString("dd/MM/yyyy")</td>
            <td>@(item.GiamGia *100) %</td>
        </tr>
    }
</table>

